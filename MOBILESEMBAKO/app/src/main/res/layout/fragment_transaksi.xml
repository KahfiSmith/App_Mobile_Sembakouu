<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yelow2"
    tools:context=".Fragment.Transaksi">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cltoplp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yelow2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Transaksi"
            android:textColor="@color/white"
            android:layout_marginTop="7dp"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@id/cltoplp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:backgroundTint="@color/white"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp">

                        <TextView
                            android:id="@+id/txt_pending"
                            android:layout_marginTop="5dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Pending"
                            android:textColor="@color/yelow2"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/Dikemas"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Dikemas"
                        android:textColor="@color/yelow2"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/Dikirim"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Dikirim"
                        android:textColor="@color/yelow2"/>
                </androidx.cardview.widget.CardView>
<!--                <androidx.cardview.widget.CardView-->
<!--                    android:layout_width="110dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:backgroundTint="@color/white"-->
<!--                    android:layout_marginLeft="20dp"-->
<!--                    android:layout_marginTop="5dp"-->
<!--                    app:cardCornerRadius="8dp">-->

<!--                    <TextView-->
<!--                        android:id="@+id/Diterima"-->
<!--                        android:layout_marginTop="5dp"-->
<!--                        android:textAlignment="center"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:textSize="12sp"-->
<!--                        android:fontFamily="@font/poppins_semibold"-->
<!--                        android:text="Diterima"-->
<!--                        android:textColor="@color/yelow2"/>-->
<!--                </androidx.cardview.widget.CardView>-->
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/Selesai"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Selesai"
                        android:textColor="@color/yelow2"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:backgroundTint="@color/white"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="8dp">

                    <TextView
                        android:id="@+id/Dibatalkan"
                        android:layout_marginTop="5dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Dibatalkan"
                        android:textColor="@color/yelow2"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
        <androidx.core.widget.NestedScrollView
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:background="@color/yelow2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_pending"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="vertical"
                    tools:listitem="@layout/cv_pending"
                    android:layout_marginBottom="80dp"
                    >
                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>